        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="SearchBar" parent="ShapeAppearanceOverlay.Material3.SearchBar">
        android:textColorHint="@color/dark_purple"
        android:textColor="@color/dark_purple"
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/dark_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--
    android:textSize	        Kích thước chữ (sp)         	            <item name="android:textSize">16sp</item>
